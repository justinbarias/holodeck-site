---
const { title = "HoloDeck â€“ Build, Test & Deploy AI Agents", description = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content={description || "HoloDeck is an open-source experimentation platform for AI agents. Define agents in YAML, run tests and evaluations, and deploy production APIs with a simple CLI."}
    />
    <link rel="icon" type="image/svg+xml" href="/holodeck-site/favicon.svg" />
    <style is:global>
      :root {
        --bg: #050814;
        --bg-alt: #080c1f;
        --fg: #f9fafb;
        --muted: #a5b4cf;
        --accent: #4f46e5;
        --accent-soft: rgba(79, 70, 229, 0.15);
        --border: #1f2937;
        --card: #0b1024;
        --radius-lg: 16px;
        --radius-md: 10px;
        --shadow-soft: 0 18px 45px rgba(15, 23, 42, 0.65);
        --font-sans: -apple-system, system-ui, BlinkMacSystemFont, "SF Pro Text",
          "Inter", "Segoe UI", sans-serif;
        --max-width: 1120px;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: var(--font-sans);
        background: radial-gradient(circle at top, #111827 0, #020617 55%);
        color: var(--fg);
        -webkit-font-smoothing: antialiased;
        font-size: 16px;
        line-height: 1.6;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      main {
        padding: 24px 16px 80px;
      }

      .container {
        max-width: var(--max-width);
        margin: 0 auto;
      }

      /* Navbar */

      .nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 0 8px;
      }

      .nav-left {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .logo-mark {
        width: 28px;
        height: 28px;
        border-radius: 999px;
        background: radial-gradient(circle at 30% 20%, #a5b4fc, #4f46e5 45%, #020617 80%);
        box-shadow: 0 0 30px rgba(129, 140, 248, 0.5);
      }

      .logo-text {
        font-weight: 600;
        letter-spacing: 0.03em;
        font-size: 18px;
      }

      .nav-links {
        display: flex;
        gap: 18px;
        font-size: 15px;
        color: var(--muted);
      }

      .nav-links a {
        padding: 6px 0;
      }

      .nav-links a:hover {
        color: var(--fg);
      }

      .nav-right {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
      }

      .btn {
        border-radius: 999px;
        padding: 8px 14px;
        border: 1px solid transparent;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        font-size: 14px;
        cursor: pointer;
        background: transparent;
        color: var(--fg);
      }

      .btn-primary {
        background: linear-gradient(135deg, #4f46e5, #7c3aed);
        border-color: #4f46e5;
        box-shadow: 0 10px 30px rgba(79, 70, 229, 0.6);
      }

      .btn-primary:hover {
        filter: brightness(1.08);
      }

      .btn-ghost {
        border-color: rgba(148, 163, 184, 0.4);
        background: rgba(15, 23, 42, 0.7);
      }

      .btn-ghost:hover {
        border-color: rgba(148, 163, 184, 0.7);
      }

      /* Hero */

      .hero {
        margin-top: 32px;
        display: grid;
        grid-template-columns: minmax(0, 3fr) minmax(0, 2.5fr);
        gap: 32px;
        align-items: center;
      }

      @media (max-width: 900px) {
        .hero {
          grid-template-columns: minmax(0, 1fr);
        }
      }

      .hero-tag {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 4px 10px;
        border-radius: 999px;
        background: rgba(15, 23, 42, 0.85);
        border: 1px solid rgba(148, 163, 184, 0.4);
        font-size: 11px;
        color: var(--muted);
        margin-bottom: 16px;
      }

      .hero-title {
        font-size: clamp(34px, 5vw, 46px);
        line-height: 1.05;
        letter-spacing: -0.04em;
        margin-bottom: 16px;
      }

      .hero-title span {
        background: linear-gradient(120deg, #a5b4fc, #22d3ee);
        -webkit-background-clip: text;
        color: transparent;
      }

      .hero-subtitle {
        font-size: 16px;
        line-height: 1.6;
        color: var(--muted);
        max-width: 38rem;
        margin-bottom: 20px;
      }

      .hero-ctas {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 16px;
      }

      .hero-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        font-size: 12px;
        color: var(--muted);
      }

      .hero-badge {
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(148, 163, 184, 0.3);
        background: rgba(15, 23, 42, 0.7);
      }

      .hero-code-card {
        background: radial-gradient(circle at top left, #1e293b, #020617 70%);
        border-radius: var(--radius-lg);
        border: 1px solid rgba(148, 163, 184, 0.35);
        box-shadow: var(--shadow-soft);
        padding: 16px 18px;
        font-family: SFMono-Regular, ui-monospace, Menlo, Monaco, Consolas,
          "Liberation Mono", "Courier New", monospace;
        font-size: 13px;
        color: #e5e7eb;
        position: relative;
        overflow: hidden;
      }

      .hero-code-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
        font-size: 12px;
        color: var(--muted);
      }

      .code-dots {
        display: flex;
        gap: 4px;
      }

      .code-dot {
        width: 8px;
        height: 8px;
        border-radius: 999px;
        background: #4b5563;
      }

      .hero-code-block {
        white-space: pre;
        overflow-x: auto;
      }

      /* Section base */

      section {
        margin-top: 56px;
      }

      .section-label {
        font-size: 11px;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--muted);
        margin-bottom: 6px;
      }

      .section-title {
        font-size: 26px;
        letter-spacing: -0.02em;
        margin-bottom: 10px;
      }

      .section-lead {
        font-size: 15px;
        color: var(--muted);
        max-width: 36rem;
      }

      /* Features */

      .features-grid {
        margin-top: 24px;
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 18px;
      }

      @media (max-width: 900px) {
        .features-grid {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }

      @media (max-width: 640px) {
        .features-grid {
          grid-template-columns: minmax(0, 1fr);
        }
      }

      .feature-card {
        background: linear-gradient(145deg, #020617, #020617 55%, #020617);
        border-radius: var(--radius-md);
        border: 1px solid var(--border);
        padding: 14px 14px 16px;
      }

      .feature-title {
        font-size: 15px;
        margin-bottom: 6px;
      }

      .feature-body {
        font-size: 14px;
        color: var(--muted);
        line-height: 1.5;
      }

      /* Two-column section */

      .two-col {
        display: grid;
        grid-template-columns: minmax(0, 1.3fr) minmax(0, 1.2fr);
        gap: 24px;
        align-items: start;
        margin-top: 18px;
      }

      @media (max-width: 900px) {
        .two-col {
          grid-template-columns: minmax(0, 1fr);
        }
      }

      .code-card {
        background: #020617;
        border-radius: var(--radius-md);
        border: 1px solid var(--border);
        padding: 10px 12px;
        font-family: SFMono-Regular, ui-monospace, Menlo, Monaco, Consolas,
          "Liberation Mono", "Courier New", monospace;
        font-size: 13px;
        color: #e5e7eb;
        white-space: pre;
        overflow-x: auto;
        max-height: 260px;
      }

      /* Steps */

      .steps-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 18px;
        margin-top: 24px;
      }

      @media (max-width: 900px) {
        .steps-grid {
          grid-template-columns: minmax(0, 1fr);
        }
      }

      .step-card {
        background: #020617;
        border-radius: var(--radius-md);
        border: 1px solid var(--border);
        padding: 14px 14px 16px;
      }

      .step-number {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 22px;
        height: 22px;
        border-radius: 999px;
        background: var(--accent-soft);
        font-size: 13px;
        margin-bottom: 6px;
      }

      .step-title {
        font-size: 15px;
        margin-bottom: 6px;
      }

      .step-body {
        font-size: 14px;
        color: var(--muted);
        margin-bottom: 8px;
      }

      /* Simple grids */

      .pill-grid {
        margin-top: 16px;
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        font-size: 13px;
        color: var(--muted);
      }

      .pill {
        border-radius: 999px;
        border: 1px solid var(--border);
        padding: 5px 10px;
        background: rgba(15, 23, 42, 0.8);
      }

      .cards-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 18px;
        margin-top: 18px;
      }

      @media (max-width: 900px) {
        .cards-grid {
          grid-template-columns: minmax(0, 1fr);
        }
      }

      .simple-card {
        background: #020617;
        border-radius: var(--radius-md);
        border: 1px solid var(--border);
        padding: 14px 14px 16px;
        font-size: 14px;
        color: var(--muted);
      }

      .simple-card h3 {
        font-size: 15px;
        margin: 0 0 6px;
        color: var(--fg);
      }

      /* Footer */

      footer {
        border-top: 1px solid rgba(31, 41, 55, 0.85);
        margin-top: 64px;
        padding-top: 16px;
        font-size: 13px;
        color: var(--muted);
      }

      .footer-row {
        display: flex;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
      }

      .footer-links {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
      }

      .footer-links a:hover {
        color: var(--fg);
      }

      @media (max-width: 720px) {
        main {
          padding: 20px 14px 60px;
        }

        section {
          margin-top: 44px;
        }

        .nav {
          flex-direction: column;
          align-items: flex-start;
          gap: 10px;
        }

        .nav-links {
          flex-wrap: wrap;
          gap: 12px;
          font-size: 14px;
        }

        .nav-right {
          width: 100%;
          justify-content: flex-start;
          gap: 8px;
        }

        .hero {
          margin-top: 12px;
          gap: 20px;
        }

        .hero-code-card {
          font-size: 12px;
        }

        .hero-title {
          font-size: clamp(30px, 9vw, 40px);
        }

        .hero-subtitle {
          font-size: 15px;
        }

        .features-grid,
        .steps-grid,
        .cards-grid {
          gap: 12px;
        }

        .feature-card,
        .step-card,
        .simple-card {
          padding: 12px;
        }
      }
    </style>
  </head>
  <body>
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
  </body>
</html>
